#include <iostream>

using namespace std;

int main()
{
    long long int t, s, x;
    cin >> t >> s >> x;

    if (x < t)
        cout << "NO\n";
    else if (x == t)
        cout << "YES\n";
    else
    {
        x -= t;

        if (x == 1)
            cout << "NO\n";
        else if (x % s < 2)
            cout << "YES\n";
        else
            cout << "NO\n";
    }

    return 0;
}
